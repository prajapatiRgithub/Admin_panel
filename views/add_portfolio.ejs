<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Portfolio</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">



    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css">
    <script src="https://code.jquery.com/ry-3jque.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="page.css">

    <style>
        body {
            text-align: left;
        }
    </style>
</head>

<body>
    <div class="container" id="contant"><br><br><br>
        <h1 class=" bg-primary" style="text-align:center;">ADD Portfolio</h1>


        <form action="/addPortfolio" method="post" enctype="multipart/form-data" style="text-align:center;">


            <div>
                <select name="projectCategory" class="form-control">
                    <option selected="" disabled="">Select Category</option>

                    
                    <% values.forEach(values=> { %>
                       
                        <option value="<%= values._id %>">
                            <%= values.categoryName %>
                        </option>
                        <% }); %>
                       
                </select>


            </div><br>

            <label for="name" style="text-align:left;font-weight:bold;font-size:1em;">Project name</label>
            <div>
                <input type="text" name="projectName" id="projectName" class="input is-success is-normal form-control" placeholder="Enter your Project Name" >

            </div><br>


            <label for="Image" class="control-label">Portfolio Image:</label>
            <input class="form-control" style="height: 70px;  padding: 20px;" type="file" name="P_image" multiple>


            <br>
            <label for="name" style="text-align:left;font-weight:bold;font-size:1em;">Project Title</label>
            <input type="text" id="projectTitle" name="projectTitle" class="input is-success is-normal form-control" placeholder="Enter Your Description" >
            <br>
            <label for="date">Date</label>
            <div>
                <input type="date" id="date" name="projectDate"><br><br>
            </div>


            <div>
                <input type="text" id="projectDescription" name="projectDescription" class="input is-success is-normal form-control" placeholder="Enter Your Description" style="height:7vh;">
            </div><br>
            <button class="btn btn-primary" type="submit">Submit</button>
        </form>
    </div>

</body>

</html>