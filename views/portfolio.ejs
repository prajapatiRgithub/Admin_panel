<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Portfolio Page</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">



    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css">
    <script src="https://code.jquery.com/ry-3jque.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="page.css">


</head>

<body>

    <h1 class="mt-8 p-2 bg-primary text-black" style="align-items: center; text-align: center;">Portfolio</h1>
    <section>
        <div class="container-fluid">
            <div class="row">

                <div class="col-md-12">
                    <form action="/multiDeletePortfolio" method="get"><br>
                        <div class="row">
                            <div class="col-md-2">
                                <a href="/showPortfolio" class="btn btn-outline-secondary">Add New Portfolio</a>
                            </div>
                            <div class="col-md-1">
                                <button class="btn btn-outline-secondary">Multi Delete</button>
                            </div>
                            <div class="col-md-1">
                                <b>Project Category</b>
                            </div>
                            <div class="col-md-1">
                                <b>Project Name</b>
                            </div>
                            <div class="col-md-2">
                                <b>Project Image</b>
                            </div>
                            <div class="col-md-2">
                                <b>Project Title</b>
                            </div>
                            <div class="col-md-2">
                                <b> Project Date</b>
                            </div><br>
                            <div class="col-md-1">
                                <b>Project Description</b> 
                            </div> <br>


                            <% values.forEach((value,index)=> { %>
                                <div class="row">
                                    <div class="col-sm-1">
                                        <a href="/showEditPortfolio/<%=value._id%>"> <input class="btn btn-primary" style="margin: 0% 2%;" id="edit" type="button" value="Edit"></a>
                                    </div>
                                    <div class="col-sm-1 ">
                                        <a href="/deletePortfolio/<%=value._id%>" method="Delete" onclick="return confirm('Are you sure you want to Delete ?')">
                                            <input class="btn btn-primary" style="margin: 0% 2%;" id="delete" type="button" value="Delete"></a>
                                    </div>
                                    <div class="col-sm-1 text-center">
                                        <label><input type="checkbox" id="multiSelect" name="<%= value._id%>"
                                                value="multiSelect"></label>
                                    </div>
                                    <div class="col-sm-1 ">
                                        <div class="form-group">
                                            <% value.anything.forEach(x=> { %>

                                                <%if(x._id.equals(value.projectCategory)){%>
                                                    <input type="text" class="form-control" name="projectCategory" value="<%= x.categoryName%>">
                                                    <%};%>
                                                        <% }); %>
                                        </div>
                                    </div>
                                    <div class="col-sm-1 ">
                                        <div class="form-group">
                                            <input type="text" class="form-control" name="projectName" value="<%= value.projectName %>" placeholder="Enter Project Name">
                                        </div>
                                    </div>
                                    <div class="col-sm-1 ">
                                        <div class="form-group">

                                            <% value.P_image.forEach(values=> { %>

                                                <img src="/<%=values%>" alt="No Image" width="100" height="100">

                                                <% }); %>

                                        </div>
                                    </div>
                                    <div class="col-sm-2 ">
                                        <div class="form-group">
                                            <input class="form-control" name="projectTitle" value="<%= value.projectTitle%>" style="height: 100%!important;">
                                        </div>
                                    </div>
                                    <div class="col-sm-2 ">
                                        <div class="form-group">
                                            <input type="date" class="form-control" name="projectDate" value="<%= value.projectDate %>" placeholder="Enter Date">
                                        </div>
                                    </div>
                                    <div class="col-sm-2 ">
                                        <div class="form-group">
                                            <textarea type="text" class="form-control" name="projectDescription" rows="3" cols="20" style="height: 100%!important;" placeholder="Enter Description"><%= value.projectDescription %></textarea>
                                        </div>
                                    </div>
                                </div>
                                <% }); %>

                        </div>

                        <a href="index">cancle</a>
                    </form>
                </div>

            </div>
        </div>
    </section>
</body>
</html>