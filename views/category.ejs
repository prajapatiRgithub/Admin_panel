<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Category Page</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">



    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css">
    <script src="https://code.jquery.com/ry-3jque.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="page.css">


</head>

<body>

    <h1 class="mt-8 p-2 bg-primary text-white" style="align-items: center; text-align: center;">Category</h1>
   
        <div class="container-fluid">
            <div class="row">

                <div class="col-md-12">
                    <form action="/multiDeleteCategory" method="get" onsubmit="return false"><br>
                        <div class="row">
                            <div class="col-md-4">
                                <a href="/showCategory" class="btn btn-outline-secondary">Add New Category</a>
                            </div>
                            <div class="col-md-3">
                                <button class="btn btn-outline-secondary">Multi Delete</button>
                            </div>
                            <div class="col-md-3">
                                <b>Category Name</b>
                            </div>

                            <div class="col-md-2"></div>

                            <br>

                            <% values.forEach((value,index)=> { %>
                                <div class="row">
                                    <br>
                                    <div class="col-md-3">
                                        <a href="/showEditCategory/<%=value._id%>"> <input class="btn btn-primary" style="margin: 0% 2%;" id="edit" type="button" value="Edit"></a>
                                    </div>
                                    <div class="col-md-3">
                                        <a href="/deleteCategory/<%=value._id%>" method="Delete" onclick="return confirm('Are you sure you want to Delete ?')">
                                            <input class="btn btn-primary" style="margin: 0% 2%;" id="delete" type="button" value="Delete"></a>
                                    </div>
                                    <br>
                                    <div class="col-md-3 text-center">
                                        <label><input type="checkbox" id="multiSelect" name="<%= value._id%>"
                                                value="multiSelect"></label>
                                    </div>
                                    <br>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <input type="text" class="form-control" name="categoryName" value="<%= value.categoryName %>" placeholder="Enter Category Name">
                                        </div>
                                    </div>
                                    <br>
                                </div>

                                <% }); %>

                        </div>
                    </form>
                </div>

            </div>
        </div>




        
</body>

</html>