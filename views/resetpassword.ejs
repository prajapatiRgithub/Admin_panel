<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">



    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css">
    <script src="https://code.jquery.com/ry-3jque.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="page.css">


    <style>
        .node {
            border-style: solid;
        }
        
        .btn {
            background-color: #3d9970!important;
        }
    </style>
</head>

<body>
    <section>
        <div class="container-fluid">
            <div style="margin: 13%;">
                    <div  style="align-items: center;">
                        
                         <br><br>
                         <h1 class="mt-8 p-2 bg-primary text-white" style="align-items: center; text-align: center;">Reset Password</h1>
                            <br>

                            <form action="/resetPass" method="post">
                                <div class="row" onsubmit="return false">

                                    <div class="col-sm-12 col-lg-12 col-md-12">
                                        <div class="form-group">
                                            <label class="col-md-6 control-label">Current Password</label>
                                            <input class="form-control" name="currentpassword" type="Password" placeholder="Enter Current Password">
                                            <% if (typeof error1 !=='undefined' && error1.length> 0) { %>
                                                <div style="color: red;">
                                                    <%= error1 %>
                                                </div>
                                                <% } %>
                                        </div>
                                    </div>

                                    <div class="col-sm-12 col-lg-12 col-md-12">
                                        <div class="form-group">
                                            <label class="col-md-6 control-label">New Password</label>

                                            <input class="form-control" name="Password" type="Password" placeholder="Enter New Password">
                                            <% if (typeof error2 !=='undefined' && error2.length> 0) { %>
                                                <div style="color: red;">
                                                    <%= error2 %>
                                                </div>
                                                <% } %>
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-lg-12 col-md-12">
                                        <div class="form-group">
                                            <label class="col-md-6 control-label">Confirm New Password</label>

                                            <input class="form-control" name="Pss" type="Password" placeholder="Enter Confirm New Password">
                                            <% if (typeof error3 !=='undefined' && error3.length> 0) { %>
                                                <div style="color: red;">
                                                    <%= error3 %>
                                                </div>
                                                <% } %>
                                        </div>
                                    </div>
                                </div>

                                <input class="btn btn-primary" style="margin: 0% 0% 2% 40%;" type="submit" value="Reset">

                            </form>   
                </div>
            </div>

        </div>
    </section>
</body>

</html>